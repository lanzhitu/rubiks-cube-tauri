{
  "package": {
    "identifier": "com.example.rubikscube",
    "icon": ["icons/icon.ico", "icons/icon.png"]
  },
  "tauri": {
    "build": {
      "beforeBuildCommand": "npm run build",
      "beforeDevCommand": "npm run dev",
      "devPath": "../src",
      "distDir": "../src/dist"
    },
    "allowlist": {
      "http": {
        "scope": ["http://127.0.0.1:8000/*"]
      },
      "shell": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Rubik's Cube",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}